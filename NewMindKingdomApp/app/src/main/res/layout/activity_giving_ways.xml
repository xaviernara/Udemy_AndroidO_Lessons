<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GivingWays">


    <ImageButton
        android:id="@+id/paypalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="paypalWebsiteLink"
        android:padding="@dimen/text_margin"
        android:paddingStart="@dimen/text_margin"
        android:src="@drawable/paypal"
        app:layout_constraintTop_toBottomOf="@+id/cashAppButton" />

    <ImageButton
        android:id="@+id/cashAppButton"
        android:layout_width="391dp"
        android:layout_height="105pt"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="cashAppWebsiteLink"
        android:padding="@dimen/text_margin"
        android:paddingStart="@dimen/text_margin"
        android:src="@drawable/cashapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zelleButton" />


    <ImageButton
        android:id="@+id/zelleButton"
        android:layout_width="385dp"
        android:layout_height="268dp"
        android:layout_marginTop="8dp"
        android:onClick="zelleWebsiteLink"
        android:padding="@dimen/text_margin"
        android:src="@drawable/zelle"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>