<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/egg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/eggTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="127dp"
        android:layout_marginEnd="149dp"
        android:layout_marginLeft="147dp"
        android:layout_marginRight="149dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="336dp"
        android:onClick="eggTimer"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/eggTimerSeekBar"
        android:layout_width="344dp"
        android:layout_height="29dp"
        android:layout_marginBottom="264dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="43dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/eggTimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/timerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="85dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:inputType="time"
        android:text="0:30"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/eggTimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggTimerSeekBar" />
</android.support.constraint.ConstraintLayout>