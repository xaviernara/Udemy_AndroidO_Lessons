<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/speakEnglishButton"
            android:onClick="frenchPhrases"
            android:text="DO YOU SPEAK ENGLISH?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="speakEnglish"
            />

        <Button
            android:id="@+id/goodEveningButton"
            android:onClick="frenchPhrases"
            android:text="good evening"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="goodEvening"
            />

        <Button
            android:id="@+id/helloButton"
            android:onClick="frenchPhrases"
            android:text="hello"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="hello"
            />

        <Button
            android:id="@+id/howAreYouButton"
            android:onClick="frenchPhrases"
            android:text="how are you?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="howAreYou"
            />

        <Button
            android:id="@+id/iLiveInButton"
            android:onClick="frenchPhrases"
            android:text="I LIVE IN..."
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="iLiveIn"
            />

        <Button
            android:id="@+id/myNameIsButton"
            android:onClick="frenchPhrases"
            android:text="MY NAME IS"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="myNameIs"
            />

        <Button
            android:id="@+id/pleaseButton"
            android:onClick="frenchPhrases"
            android:text="PLEASE"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="please"
            />

        <Button
            android:id="@+id/welcomeButton"
            android:onClick="frenchPhrases"
            android:text="WELCOME"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="welcome"
            />



    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>