<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="54dp"
        android:layout_marginBottom="451dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="41dp"
        android:text="Hiker Watch"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitudeTextView"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="317dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="119dp"
        android:text="Latitude"
        app:layout_constraintBottom_toTopOf="@+id/longitdueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longitdueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="306dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="Longitdue"
        app:layout_constraintBottom_toTopOf="@+id/altitudeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitudeTextView" />

    <TextView
        android:id="@+id/altitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="319dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="Altitude"
        app:layout_constraintBottom_toTopOf="@+id/addressTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitdueTextView" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="182dp"
        android:layout_height="87dp"
        android:layout_marginBottom="115dp"
        android:layout_marginEnd="186dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:text="Address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altitudeTextView" />

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="186dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="132dp"
        android:text="Accuracy"
        app:layout_constraintBottom_toTopOf="@+id/addressTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/altitudeTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</android.support.constraint.ConstraintLayout>